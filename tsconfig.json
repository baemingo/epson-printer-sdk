{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "baseUrl": "./src",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
